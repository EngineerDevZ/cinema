<% provide(:title, @movie.title) %>
<div class="row">
	<div class="col-lg-4">
		<div class="thumbnail">
			<%= link_to image_tag(@movie.image_url.to_s), movie_path(@movie) %>
			<div class="caption">
				<h4><%= link_to @movie.title, movie_path(@movie) %></h4>
				<p><%= @movie.genre.name %></p>
			</div>
		</div>
	</div>
	<div class="span8">
    <% if !@showings.nil? %>
      <h3>Showings</h3>
      <ol class="microposts">
        <%= render @showings %>
      </ol>
    <% end %>
  </div>
</div>

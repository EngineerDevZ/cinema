<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>
<div class="row">
  <ol class="microposts">
    <% if @tickets.any? %>
    <h5>Your tickets:</h5>
    <% end %>
    <%= render partial: 'ticket', collection: @tickets %>
  </ol>
</div>